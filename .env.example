# Database
DATABASE_URL=postgresql://bpo_user:bpo_password@localhost:5432/bpo_platform

# Redis
REDIS_URL=redis://localhost:6379

# Keycloak
KEYCLOAK_URL=http://localhost:8080
KEYCLOAK_REALM=bpo-platform
KEYCLOAK_CLIENT_ID=bpo-backend
KEYCLOAK_CLIENT_SECRET=your-client-secret

# MinIO / S3
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_USE_SSL=false
MINIO_BUCKET=bpo-documents

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRATION=1h
JWT_REFRESH_EXPIRATION=7d

# External Integrations
VERSANT_API_URL=https://api.versant.example.com
VERSANT_API_KEY=your-versant-api-key

KNOWMAX_API_URL=https://api.knowmax.example.com
KNOWMAX_API_KEY=your-knowmax-api-key

WARDEN_WEBHOOK_SECRET=your-warden-webhook-secret

# Payment Gateway
PAYMENT_PROVIDER=razorpay
RAZORPAY_KEY_ID=your-razorpay-key-id
RAZORPAY_KEY_SECRET=your-razorpay-key-secret

# Notifications
SENDGRID_API_KEY=your-sendgrid-api-key
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Application
NODE_ENV=development
PORT=3000
FRONTEND_URL=http://localhost:5173
